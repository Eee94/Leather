---
interface Props {
	title: string;
	description?: string;
	image?: string
}

const { title,description,image } = Astro.props;

import HeaderEn from "../components/HeaderEn.astro";
import AboutEn from "../components/AboutEn.astro";
import Footeren from "../components/Footeren.astro";

import '@fontsource-variable/open-sans';

import Back from "../components/Back.astro";

---

<!doctype html>
<html lang="en">
	<head>

		<meta name="astro-view-transitions-fallback" content="animate">
	
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width,initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		
		<title>ABOUT THE SHOP</title>
		<meta name="description" content="We are showcasing the special features of our store."/>
		<meta name="format-detection" content="telephone=no" />
		<meta name="googlebot" content="noindex">
        <meta name="robots" content="noindex,nofollow" />

		<link rel="icon" href="/king.png">
		<link rel="apple-touch-icon" href="/king.png" sizes="180x180">

		<meta property="og:url" content="https://pircamabui.com/aboutEn/">
		<meta property="og:type" content="website">
		<meta property="og:title" content="Our Quality">
		<meta property="og:description" content="We are showcasing the special features of our store.">
		<meta property="og:image" content="/wokrd-min.webp">
	

		<title>{title}</title>
	</head>

	<body>
		<HeaderEn />
		<AboutEn />

        <Back />
		<Footeren />
		<slot />
	</body>
</html>

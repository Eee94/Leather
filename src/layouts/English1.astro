---
interface Props {
	title: string;
	description?: string;
	image?: string
}

const { title,description,image } = Astro.props;

import HoneEn from "../components/HomeEn.astro";

import Footeren from "../components/Footeren.astro";
import '@fontsource-variable/open-sans';
import Back from "../components/Back.astro";


---

<!doctype html>
<html lang="en">
	<head>

		<meta name="astro-view-transitions-fallback" content="animate">
	
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width,initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		
		<title>Pirca Mabui</title>
		<meta name="description" content="We are an online store based in Hokkaido specializing in handmade leather goods." />
		<meta name="format-detection" content="telephone=no" />
		<meta name="googlebot" content="noindex">
        <meta name="robots" content="noindex,nofollow" />

		<link rel="icon" href="/king.png">
		<link rel="apple-touch-icon" href="/king.png" sizes="180x180">

		<meta property="og:url" content="https://pircamabui.com/homeEn/">
		<meta property="og:type" content="website">
		<meta property="og:title" content="Pirca Mabui LeatherShop">
		<meta property="og:description" content="We are an online store based in Hokkaido specializing in handmade leather goods.">
		<meta property="og:image" content="/tophome.webp">
	

		<title>{title}</title>
	</head>

	<body>
		<HoneEn />
		<Back />

		<Footeren />
		<slot />
	</body>
</html>


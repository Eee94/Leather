---
interface Props {
	title: string;
	description?: string;
	image?: string
}

const { title,description,image } = Astro.props;

import Header from "../components/Header.astro";
import Leather from "../components/Leather.astro";
import Footer from "../components/Footer.astro";

import '@fontsource/shippori-mincho';
import Back from "../components/Back.astro";


---

<!doctype html>
<html lang="ja">
	<head>

		<meta name="astro-view-transitions-fallback" content="animate">
	
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width,initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		
		<title>革について</title>
		<meta name="description" content="当店の取り扱っている革についてご紹介しています。" />
		<meta name="format-detection" content="telephone=no" />
		<meta name="googlebot" content="noindex">
        <meta name="robots" content="noindex,nofollow" />

		<link rel="icon" href="/king.png">
		<link rel="apple-touch-icon" href="/king.png" sizes="180x180">

		<meta property="og:url" content="https://pircamabui.com/aboutleather/">
		<meta property="og:type" content="website">
		<meta property="og:title" content="革について">
		<meta property="og:description" content="当店の取り扱っている革についてご紹介しています。">
		<meta property="og:image" content="/wokrd-min.webp">
	

		<title>{title}</title>
	</head>

	<body>
		<Header />

		<Leather />
		<Back />

		<Footer />
		<slot />
	</body>
</html>

